<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentMain">

    <fragment
        android:id="@+id/fragmentMain"
        android:name="com.example.homework17.presentation.FragmentMain"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_main_fragment_to_fullScreenPhotoFragment"
            app:destination="@id/fullScreenPhotoFragment" />
    </fragment>
    <fragment
        android:id="@+id/fullScreenPhotoFragment"
        android:name="com.example.homework17.presentation.FullScreenPhotoFragment"
        android:label="fragment_full_screen_photo"
        tools:layout="@layout/fragment_full_screen_photo"
        >
        <action
            android:id="@+id/action_fullScreenPhotoFragment_to_nav_host"
            app:destination="@id/fragmentMain" />
    </fragment>


</navigation>
