<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/infoAboutPassengers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Все места свободны"
        android:textAllCaps="false"
        android:textColor="#00FF00"
        android:textSize="28sp"
        tools:text="Информация о местах в автобусе" />

    <TextView
        android:id="@+id/numbersOfPassengers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="TextView"
        android:textSize="60sp"
        tools:text="0" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Отправка"
        android:textSize="24sp"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/minusButton"
        android:background="@drawable/selector_minusbutton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@null"
        android:contentDescription="Push to add passenger"
        app:srcCompat="@drawable/minus"
        app:tint="#FEFAFD" />

    <ImageButton
        android:id="@+id/plusButton"
        android:background="#6750A3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:backgroundTint="@null"
        android:contentDescription="Push to remove passenger"
        app:srcCompat="@drawable/plus"
        app:tint="#FEFAFD" />
</FrameLayout>
